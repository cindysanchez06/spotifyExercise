
{% block title %}{{ artist.name }}{% endblock %}


{% block body %}

  <style>
    body {
      background-color: #3c3f41;
    }

    .artist-title {
      text-align: left;
    }

    .container-artist {
      margin-top: 5%;

    }

    .picture-artist {
      width: 200px;
      height: 200px;
      border-radius: 150px;
      margin-bottom: 20px;

    }

  </style>

  <div class="container">
    <div class="row container-artist">
      <div class="col-md-3">
        <img class="picture-artist" src="{{ artist.images[0].url }}">
      </div>
      <div class="col-md-9">
        <h1 class="title artist-title">{{ artist.name }}</h1>

      </div>
      <table class="table table-dark">
        <thead>
        <tr>
          <th>Foto</th>
          <th>Album</th>
          <th>Cancion</th>
        </tr>
        </thead>
        <tbody>

        {% for album in albums %}
          <tr>
            <td>
              <img style="width: 80px" src="{{ album.images[0].url }}">
            </td>
            <td>
              <h4>{{ album.name }}</h4>
            </td>
            <td>
              {{ album.tracks.items[0].name }}
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>

  </div>
{% endblock %}
