
{% block title %}Ultimos Lanzamientos{% endblock %}

{% block body %}
  <style>
    body {
      background-color: #3c3f41;
    }

    .title {
      color: #1bd760;
      margin-bottom: 40px;
      margin-top: 40px;
    }

    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
      background: #F5F5F5;
      padding: 2px 6px;
    }

    .album {
      width: 20rem;
      height: 26rem;
      margin-bottom: 30px;
      padding: 4px;
      background-color: #212529;
    }

    .img-album {
      object-fit: cover
    }

    .card-title {
      color: #F5F5F5;
    }
  </style>
  <div class="container">
    <h1 class="title">Ultimos Lanzamientos</h1>

    <div style="width: 100%">
      {% for item in items %}
        <div style="width: 25%">
          <div class="card album">
            <img class="card-img-top img-album" src="{{ item.images[0].url }}" alt="Card image cap">
            <div class="card-body">
              <h6 class="card-title">{{ item.name }}</h6>
              {% for artist in  item.artists %}
                <a href="{{ path('spotify.artist', {'id': artist.id} ) }}"
                   class="card-link">{{ artist.name }}</a>
              {% endfor %}
            </div>

          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
